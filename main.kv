<PhonebookSearchLayout>:
    orientation: 'vertical'

    TextInput:
        id: input_box
        hint_text: 'Enter name'
        multiline: False
        on_text_validate: root.on_enter(self)
        on_text: root.show_suggestions(self.text)
        pos: 80,250
        size: 200,50
        focus: True

    BoxLayout:
        id: suggestions_box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        pos: 80, 80
        size: 200, 100


<SuggestionButton>:
    size_hint_y: None
    height: '50dp'
    background_color: 10/255,10/255,41/255, 1  # Change the background color to a greenish tone
    color: 1, 1, 1, 1
    bold: True

