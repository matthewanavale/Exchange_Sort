<PhonebookSearchLayout>:
    orientation: 'vertical'

    TextInput:
        id: input_box
        hint_text: 'Enter name'
        multiline: False
        on_text_validate: root.on_enter(self)
        on_text: root.show_suggestions(self.text)
        pos: 200,400
        size: 200,50
        focus: True

    BoxLayout:
        id: suggestions_box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height


<SuggestionButton>:
    size_hint_y: None
    height: '50dp'
    pos: 200, 30

